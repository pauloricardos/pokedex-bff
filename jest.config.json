{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src"
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "moduleNameMapper": {
    "^@domains/(.*)$": "<rootDir>/src/domains/$1",
    "^@infra/(.*)$": "<rootDir>/src/infra/$1",
    "^@helpers/(.*)$": "<rootDir>/src/helpers/$1",
    "^@clients/(.*)$": "<rootDir>/src/clients/$1"
  }
}